<%- include('../partials/header') %> <%- include('../partials/menu') %>
<div class="container">
  <br />
  <div class="row">
    <div class="col-4">
      <div class="card">
        <% if (result_1) { %>
        <!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
        <% var image_src = result_1.img_src; %>
        <img
          class="card-img-top"
          id="player_img"
          src="<%- image_src %>"
          alt="Image of Football Player"
        />
        <div class="card-body mx-auto">
          <form class="form" action="/player_info/post" method="get">
            <select
              class="custom-select"
              name="player_choice"
              onchange="this.form.submit()"
            >
              <option selected>Select Player</option>
              <% if (result) { %> <% result.forEach(function(item){ %>
              <option value="<%= item.id %>"><%= item.name %></option>
              <% }) %> <% } %>
            </select>
          </form>
        </div>
        <% } %>
      </div>
    </div>
    <div class="col-8">
      <div class="table-responsive">
        <table class="table">
          <tr>
            <!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
            <th>Year</th>
            <td><%= result_1.year %></td>
          </tr>
          <tr>
            <th>Major</th>
            <td><%= result_1.major %></td>
          </tr>
          <tr>
            <th>Games Played</th>
            <% if (result_2) { %>
            <td><%= result_2 %></td>
            <% } %>
          </tr>
          <tr>
            <td>Passing Yards:</td>
            <td>Avg. Passing Yards: <%= result_1.passing_yards %></td>
          </tr>
          <tr>
            <td>Rushing Yards:</td>
            <td>Avg. Rushing Yards: <%= result_1.rushing_yards %></td>
          </tr>
          <tr>
            <td>Receiving Yards:</td>
            <td>Avg. Receiving Yards: <%= result_1.receiving_yards %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
